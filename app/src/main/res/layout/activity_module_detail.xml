<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@drawable/blue_background">


    <TextView
        android:id="@+id/moduleName"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="10dp"
        android:gravity="center"
        android:text="Module Name"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/border"
        android:textColor="#4D8BB8"
        android:fontFamily="sans-serif-light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/moduleCode"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:padding="10dp"
            android:gravity="center"
            android:text="Module Code"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/border"
            android:textColor="#4D8BB8"
            android:fontFamily="sans-serif-light"/>

        <TextView
            android:id="@+id/venue"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:padding="10dp"
            android:gravity="center"
            android:text="Venue"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/border"
            android:textColor="#4D8BB8"
            android:fontFamily="sans-serif-light"/>

    </LinearLayout>

    <TextView
        android:id="@+id/yearAndSem"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginRight="5dp"
        android:padding="10dp"
        android:gravity="left|center_vertical"
        android:text="Academic Year and Semester No"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/border"
        android:textColor="#4D8BB8"
        android:fontFamily="sans-serif-light"/>


    <Button
        android:id="@+id/backToMyModules"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="170dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/leftarrow"
        android:gravity="center"
        android:text="Back to My Modules"
        android:textColor="#4D8BB8" />


</LinearLayout>
